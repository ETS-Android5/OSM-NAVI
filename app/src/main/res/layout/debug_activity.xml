<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="khushboo.rohit.osmnavi.MainActivity">

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_weight="30">

    <Button
        android:id="@+id/button"
        style="@android:style/Widget.Holo.Light.Button.Toggle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="30"
        android:background="#FF296596"
        android:onClick="changeLayout"
        android:text="Add Text"
        android:textColor="#FFFFFF"
        android:textSize="35sp" />

    <View
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:background="#FFFFFF"/>

    <Button
        android:layout_width="match_parent"
        android:text="Saved routes"
        android:id="@+id/button_save"
        android:onClick="onSaveButton"
        style="@android:style/Widget.Holo.Light.Button.Toggle"
        android:layout_height="match_parent"
        android:layout_weight="30"
        android:background="#FF296596"
        android:textColor="#FFFFFF"
        android:textSize="35sp" />

    </TableRow>

    <View
        android:layout_width="fill_parent"
        android:layout_height="5sp"
        android:background="#FFFFFF"/>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_weight="30">

        <Button
            android:id="@+id/button4"
            android:layout_width="50dp"
            android:onClick="showMessage1"
            android:text="Show DB"
            style="@android:style/Widget.Holo.Light.Button.Toggle"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:background="#FF296596"
            android:textColor="#FFFFFF"
            android:textSize="35sp" />

        <View
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="#FFFFF0" />

        <Button
            android:id="@+id/button5"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:onClick="exportDb"
            android:text="Export DB"
            android:textColor="#FFFFFF"
            style="@android:style/Widget.Holo.Light.Button.Toggle"
            android:layout_weight="30"
            android:background="#FF296596"
            android:textSize="35sp" />

    </TableRow>

    <View
        android:layout_width="fill_parent"
        android:layout_height="5sp"
        android:background="#FFFFFF"/>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_weight="30"
        android:layout_height="30dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:text="Debug"
            android:id="@+id/button9"
            android:onClick="onDebugButton"
            style="@android:style/Widget.Holo.Light.Button.Toggle"
            android:background="#FF296596"
            android:textColor="#FFFFFF"
            android:textSize="35sp" />

        <View
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="#FFFFF0" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Clear Data"
            android:id="@+id/button10"
            android:onClick="clearData"
            style="@android:style/Widget.Holo.Light.Button.Toggle"
            android:layout_weight="30"
            android:background="#FF296596"
            android:textColor="#FFFFFF"
            android:textSize="35sp" />
    </TableRow>

    <View
        android:layout_width="fill_parent"
        android:layout_height="5sp"
        android:background="#FFFFF0"/>

    <Button
        android:id="@+id/button8"
        style="@android:style/Widget.Holo.Light.Button.Toggle"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="30"
        android:background="#FF296596"
        android:onClick="onStopDebug"
        android:text="Back"
        android:textColor="#FFFFFF"
        android:textSize="50sp" />


</LinearLayout>